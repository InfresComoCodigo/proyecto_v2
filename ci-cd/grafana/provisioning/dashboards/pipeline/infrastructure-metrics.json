{
  "dashboard": {
    "id": null,
    "title": "Villa Alfredo - Infrastructure Metrics",
    "tags": ["infrastructure", "prometheus", "metrics", "villa-alfredo"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Jenkins Build Status",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "jenkins_builds_duration_milliseconds_summary_count",
            "legendFormat": "Total Builds"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "System CPU Usage",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "100 * (1 - ((node_memory_MemAvailable_bytes) / (node_memory_MemTotal_bytes)))",
            "legendFormat": "Memory Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 0}
      },
      {
        "id": 4,
        "title": "Docker Container Status",
        "type": "table",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "container_last_seen",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Disk Usage",
        "type": "gauge",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "100 * (1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"}))",
            "legendFormat": "{{mountpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "Received - {{device}}"
          },
          {
            "refId": "B",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "rate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "Transmitted - {{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Jenkins Queue Length",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "jenkins_queue_size_value",
            "legendFormat": "Queue Size"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Jenkins Executors",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "jenkins_executor_count_value",
            "legendFormat": "Total Executors"
          },
          {
            "refId": "B",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "jenkins_executor_in_use_value",
            "legendFormat": "In Use"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 9,
        "title": "SonarQube Status",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "prometheus",
              "uid": "prometheus"
            },
            "expr": "up{job=\"sonarqube\"}",
            "legendFormat": "SonarQube Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "Down", "color": "red"},
                  "1": {"text": "Up", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
