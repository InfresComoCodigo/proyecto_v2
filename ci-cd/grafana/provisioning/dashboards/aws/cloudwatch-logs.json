{
  "dashboard": {
    "id": null,
    "title": "Villa Alfredo - AWS CloudWatch Logs",
    "tags": ["aws", "cloudwatch", "logs", "villa-alfredo"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Gateway Access Logs",
        "type": "logs",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @timestamp, @message, status, responseTime, ip | filter status >= 400 | sort @timestamp desc",
            "region": "us-east-1",
            "logGroups": ["/aws/apigateway/villa-alfredo"]
          }
        ],
        "gridPos": {"h": 12, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Lambda Function Logs",
        "type": "logs",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @timestamp, @message, @requestId | filter @message like /ERROR/ | sort @timestamp desc",
            "region": "us-east-1",
            "logGroups": ["/aws/lambda/villa-alfredo-api"]
          }
        ],
        "gridPos": {"h": 12, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "RDS Database Logs",
        "type": "logs",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @timestamp, @message | filter @message like /ERROR|FATAL/ | sort @timestamp desc",
            "region": "us-east-1",
            "logGroups": ["/aws/rds/villa-alfredo-db"]
          }
        ],
        "gridPos": {"h": 12, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 4,
        "title": "ECS Container Logs",
        "type": "logs",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @timestamp, @message, level | filter level in [\"ERROR\", \"WARN\"] | sort @timestamp desc",
            "region": "us-east-1",
            "logGroups": ["/ecs/villa-alfredo-backend"]
          }
        ],
        "gridPos": {"h": 12, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 5,
        "title": "API Response Times",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @timestamp, responseTime | filter ispresent(responseTime) | stats avg(responseTime), max(responseTime), min(responseTime) by bin(5m)",
            "region": "us-east-1",
            "logGroups": ["/aws/apigateway/villa-alfredo"]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 6,
        "title": "Error Rate by Status Code",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @timestamp, status | stats count() by status | sort status",
            "region": "us-east-1",
            "logGroups": ["/aws/apigateway/villa-alfredo"]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 400},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 7,
        "title": "Top Error Messages",
        "type": "table",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "cloudwatch",
              "uid": "cloudwatch-logs"
            },
            "expression": "fields @message | filter @message like /ERROR/ | stats count() as error_count by @message | sort error_count desc | limit 10",
            "region": "us-east-1",
            "logGroups": ["/aws/lambda/villa-alfredo-api", "/ecs/villa-alfredo-backend"]
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
