pipeline {
    agent any
    
    parameters {
        booleanParam(
            name: 'AUTO_APPROVE',
            defaultValue: false,
            description: 'Auto-aprobar los cambios de Terraform'
        )
        string(
            name: 'TERRAFORM_WORKSPACE',
            defaultValue: 'default',
            description: 'Workspace de Terraform'
        )
        booleanParam(
            name: 'RUN_TESTS',
            defaultValue: true,
            description: 'Ejecutar pruebas de infraestructura despu√©s del deploy'
        )
    }
    
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        TF_VAR_environment = "${params.TERRAFORM_WORKSPACE}"
        TERRAFORM_DIR = 'infrastructure'
        ACTION = 'apply'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "üîÑ Repositorio clonado exitosamente"
            }
        }
        
        stage('Validate Environment') {
            steps {
                script {
                    sh '''
                        echo "üîç Validando herramientas requeridas..."
                        terraform version
                        aws --version
                        echo "üìÅ Directorio actual: $(pwd)"
                        ls -la
                        
                        echo "üîê Verificando credenciales AWS..."
                        aws sts get-caller-identity
                    '''
                }
            }
        }
        
        stage('Terraform Init') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üöÄ Inicializando Terraform..."
                            terraform init -upgrade
                            
                            echo "üè∑Ô∏è  Seleccionando workspace: ${TERRAFORM_WORKSPACE}"
                            terraform workspace select ${TERRAFORM_WORKSPACE} || terraform workspace new ${TERRAFORM_WORKSPACE}
                            
                            echo "üìç Workspace actual:"
                            terraform workspace show
                        '''
                    }
                }
            }
        }
        
        stage('Terraform Validate & Format') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "‚úÖ Validando configuraci√≥n de Terraform..."
                            terraform validate
                            
                            echo "üé® Verificando formato de archivos..."
                            terraform fmt -check=true -diff=true || {
                                echo "‚ö†Ô∏è  Aplicando formato autom√°tico..."
                                terraform fmt -recursive
                            }
                        '''
                    }
                }
            }
        }
        
        stage('Pre-Apply Validation') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üîç Validando configuraci√≥n pre-aplicaci√≥n..."
                            
                            # Verificar conflictos de VPC endpoints
                            echo "üìç Verificando VPC endpoints existentes..."
                            terraform state list | grep vpc_endpoint || echo "No hay VPC endpoints en el estado"
                            
                            # Verificar rutas existentes en tablas de rutas
                            echo "üõ£Ô∏è Verificando rutas de tablas existentes..."
                            terraform state list | grep route_table || echo "No hay tablas de rutas en el estado"
                            
                            # Refrescar estado para sincronizar con AWS
                            echo "üîÑ Refrescando estado de Terraform..."
                            terraform refresh -var-file=terraform.tfvars
                        '''
                    }
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üìã Generando plan de aplicaci√≥n..."
                            terraform plan -out=tfplan -var-file=terraform.tfvars
                            
                            echo "üíæ Guardando plan en archivo de texto para revisi√≥n..."
                            terraform show -no-color tfplan > tfplan.txt
                            
                            echo "üìä Resumen del plan:"
                            grep -E "(Plan:|No changes)" tfplan.txt || echo "Plan generado exitosamente"
                        '''
                    }
                }
            }
        }
        
        stage('Security & Cost Analysis') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üîí Analizando configuraci√≥n de seguridad..."
                            
                            # Verificar que no haya recursos p√∫blicos innecesarios
                            echo "Verificando configuraciones de seguridad en el plan..."
                            grep -i "public" tfplan.txt || echo "‚úÖ No se encontraron configuraciones p√∫blicas inesperadas"
                            
                            echo "üí∞ Estimaci√≥n de costos disponible en AWS Cost Calculator"
                        '''
                    }
                }
            }
        }
        
        stage('Review Plan') {
            when {
                equals expected: false, actual: params.AUTO_APPROVE
            }
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        echo "üìñ Plan de Terraform generado. Revisa los cambios:"
                        sh 'cat tfplan.txt'
                        
                        // Mostrar resumen de cambios
                        sh '''
                            echo "üìà RESUMEN DE CAMBIOS:"
                            echo "===================="
                            grep -E "to add|to change|to destroy" tfplan.txt || echo "No hay cambios destructivos"
                        '''
                        
                        // Pausar para revisi√≥n manual
                        input message: "üöÄ ¬øProceder con el despliegue de infraestructura?", ok: 'Continuar'
                    }
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üöÄ Aplicando cambios de Terraform..."
                            
                            # Aplicar con manejo de errores
                            if ! terraform apply -auto-approve tfplan; then
                                echo "‚ùå Error durante terraform apply"
                                echo "üîç Analizando posibles conflictos..."
                                
                                # Verificar errores comunes
                                if terraform show 2>&1 | grep -q "RouteAlreadyExists"; then
                                    echo "‚ö†Ô∏è  Detectado conflicto de rutas VPC"
                                    echo "üîß Intentando refrescar estado..."
                                    terraform refresh -var-file=terraform.tfvars
                                    
                                    echo "üîÑ Reintentando apply..."
                                    terraform apply -auto-approve tfplan
                                else
                                    echo "ÔøΩ Error no manejado autom√°ticamente"
                                    exit 1
                                fi
                            fi
                            
                            echo "ÔøΩüìÑ Mostrando outputs de infraestructura:"
                            terraform output -json > terraform-outputs.json
                            terraform output
                        '''
                    }
                }
            }
        }
        
        stage('Handle Apply Conflicts') {
            when {
                // Solo ejecutar si el apply anterior fall√≥
                expression { currentBuild.result == 'FAILURE' }
            }
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üõ†Ô∏è  Manejando conflictos de Terraform..."
                            
                            # Intentar importar recursos hu√©rfanos
                            echo "üîç Verificando recursos hu√©rfanos..."
                            
                            # Para VPC endpoints duplicados, intentar eliminarlos del estado
                            if terraform state list | grep -q "aws_vpc_endpoint.s3"; then
                                echo "‚ö†Ô∏è  VPC Endpoint S3 encontrado en estado"
                                echo "üóëÔ∏è  Removiendo del estado para reimportar..."
                                terraform state rm module.vpc_endpoints.aws_vpc_endpoint.s3 || true
                            fi
                            
                            # Regenerar plan despu√©s de limpiar estado
                            echo "üîÑ Regenerando plan despu√©s de limpieza..."
                            terraform plan -out=tfplan-recovery -var-file=terraform.tfvars
                            
                            # Aplicar plan de recuperaci√≥n
                            echo "üöÄ Aplicando plan de recuperaci√≥n..."
                            terraform apply -auto-approve tfplan-recovery
                        '''
                    }
                }
            }
        }
        
        stage('Save State Backup') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üíæ Creando respaldo del estado..."
                            
                            # Crear directorio de respaldo con timestamp
                            BACKUP_DIR="backups/$(date +%Y%m%d_%H%M%S)"
                            mkdir -p $BACKUP_DIR
                            
                            # Copiar archivos de estado y configuraci√≥n
                            if [ -f terraform.tfstate ]; then
                                cp terraform.tfstate $BACKUP_DIR/
                                echo "‚úÖ Estado principal respaldado"
                            fi
                            
                            if [ -f terraform.tfstate.backup ]; then
                                cp terraform.tfstate.backup $BACKUP_DIR/
                                echo "‚úÖ Estado de respaldo copiado"
                            fi
                            
                            if [ -f terraform.tfvars ]; then
                                cp terraform.tfvars $BACKUP_DIR/
                                echo "‚úÖ Variables respaldadas"
                            fi
                            
                            if [ -f terraform-outputs.json ]; then
                                cp terraform-outputs.json $BACKUP_DIR/
                                echo "‚úÖ Outputs respaldados"
                            fi
                            
                            echo "üì¶ Estado respaldado en: $BACKUP_DIR"
                        '''
                    }
                }
            }
        }
        
        stage('Test Infrastructure') {
            when {
                equals expected: true, actual: params.RUN_TESTS
            }
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üß™ Ejecutando pruebas de infraestructura..."
                            
                            # Verificar que los recursos cr√≠ticos est√©n funcionando
                            echo "üîç Verificando recursos cr√≠ticos..."
                            
                            # Probar conectividad a instancias EC2
                            terraform show -json | jq -r '.values.root_module.resources[] | select(.type == "aws_instance") | .values.public_ip' > ec2_ips.txt
                            if [ -s ec2_ips.txt ]; then
                                echo "‚úÖ Instancias EC2 encontradas:"
                                cat ec2_ips.txt
                            else
                                echo "‚ÑπÔ∏è  No hay instancias EC2 con IP p√∫blica"
                            fi
                            
                            # Verificar load balancer
                            ALB_DNS=$(terraform output -raw alb_dns_name 2>/dev/null || echo "")
                            if [ ! -z "$ALB_DNS" ]; then
                                echo "üåê Load Balancer DNS: $ALB_DNS"
                                echo "‚úÖ ALB configurado correctamente"
                            fi
                            
                            # Verificar CloudFront
                            CF_DOMAIN=$(terraform output -raw cloudfront_domain_name 2>/dev/null || echo "")
                            if [ ! -z "$CF_DOMAIN" ]; then
                                echo "üåç CloudFront Domain: $CF_DOMAIN"
                                echo "‚úÖ CDN configurado correctamente"
                            fi
                            
                            # Ejecutar scripts de prueba personalizados si existen
                            if [ -f "../scripts/test_infrastructure.sh" ]; then
                                echo "üîß Ejecutando pruebas personalizadas..."
                                chmod +x ../scripts/test_infrastructure.sh
                                ../scripts/test_infrastructure.sh
                            fi
                        '''
                    }
                }
            }
        }
        
        stage('Generate Infrastructure Report') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    script {
                        sh '''
                            echo "üìä Generando reporte de infraestructura..."
                            
                            # Crear reporte HTML simple
                            cat > infrastructure-report.html << EOF
<!DOCTYPE html>
<html>
<head>
    <title>Infrastructure Deployment Report</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 40px; }
        .success { color: green; }
        .info { color: blue; }
        .header { background-color: #f0f0f0; padding: 10px; }
        pre { background-color: #f5f5f5; padding: 10px; overflow-x: auto; }
    </style>
</head>
<body>
    <div class="header">
        <h1>üöÄ Infrastructure Deployment Report</h1>
        <p class="info">Deployment Date: $(date)</p>
        <p class="info">Workspace: ${TERRAFORM_WORKSPACE}</p>
        <p class="info">Build: ${BUILD_NUMBER}</p>
    </div>
    
    <h2>üìã Terraform Outputs</h2>
    <pre>$(terraform output 2>/dev/null || echo "No outputs available")</pre>
    
    <h2 class="success">‚úÖ Deployment Completed Successfully</h2>
    <p>Infrastructure has been deployed and is ready for use.</p>
</body>
</html>
EOF
                            
                            echo "‚úÖ Reporte generado: infrastructure-report.html"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            dir("${TERRAFORM_DIR}") {
                script {
                    // Limpiar archivos temporales
                    sh '''
                        echo "üßπ Limpiando archivos temporales..."
                        rm -f tfplan tfplan.txt ec2_ips.txt
                    '''
                }
            }
            
            // Archivar logs y reportes
            archiveArtifacts artifacts: 'infrastructure/backups/**/*', allowEmptyArchive: true
            archiveArtifacts artifacts: 'infrastructure/infrastructure-report.html', allowEmptyArchive: true
            archiveArtifacts artifacts: 'infrastructure/terraform-outputs.json', allowEmptyArchive: true
            
            // Publicar reporte HTML
            publishHTML([
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'infrastructure',
                reportFiles: 'infrastructure-report.html',
                reportName: 'Infrastructure Report'
            ])
        }
        
        success {
            echo "üéâ Pipeline de DEPLOY ejecutado exitosamente"
            echo "‚úÖ Infraestructura desplegada y lista para uso"
            
            // Notificaciones de √©xito (opcional)
            // slackSend(
            //     channel: '#devops',
            //     color: 'good',
            //     message: "‚úÖ Infrastructure DEPLOYED successfully in ${env.JOB_NAME} #${env.BUILD_NUMBER}\nüåç Environment: ${params.TERRAFORM_WORKSPACE}"
            // )
        }
        
        failure {
            echo "‚ùå Pipeline de DEPLOY fall√≥"
            
            // En caso de fallo, mostrar informaci√≥n √∫til
            dir("${TERRAFORM_DIR}") {
                script {
                    sh '''
                        echo "üîç Estado actual de Terraform:"
                        terraform show 2>/dev/null || echo "No se puede mostrar el estado"
                        
                        echo "üìã √öltimos logs:"
                        tail -20 *.log 2>/dev/null || echo "No hay logs disponibles"
                    '''
                }
            }
            
            // Notificaciones de error (opcional)
            // slackSend(
            //     channel: '#devops',
            //     color: 'danger',
            //     message: "‚ùå Infrastructure DEPLOYMENT failed in ${env.JOB_NAME} #${env.BUILD_NUMBER}\nüö® Environment: ${params.TERRAFORM_WORKSPACE}"
            // )
        }
        
        cleanup {
            // Limpiar workspace si es necesario
            cleanWs()
        }
    }
}
